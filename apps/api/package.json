{
  "name": "@riscovery/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "compile": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "prisma db seed",
    "db:seed:templates": "tsx prisma/seed-templates.ts",
    "db:seed:local-authority": "tsx prisma/seed-local-authority-templates.ts",
    "db:seed:products": "tsx prisma/seed-insurance-products.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@prisma/client": "^5.9.1",
    "@riscovery/types": "workspace:*",
    "dotenv": "^16.4.1",
    "exceljs": "^4.4.0",
    "fastify": "^4.26.0",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.3.2",
    "mammoth": "^1.11.0",
    "openai": "^6.21.0",
    "pdf-parse": "^2.4.5",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@riscovery/eslint-config": "workspace:*",
    "@riscovery/typescript-config": "workspace:*",
    "@types/node": "^20.11.0",
    "@types/pdf-parse": "^1.1.5",
    "eslint": "^8.57.0",
    "prisma": "^5.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
