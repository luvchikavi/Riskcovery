{
  "name": "riscovery",
  "version": "0.1.0",
  "private": true,
  "description": "Insurance Advisory Management System",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:ci": "turbo test:ci",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push",
    "db:migrate": "turbo db:migrate",
    "db:studio": "pnpm --filter @riscovery/api db:studio"
  },
  "devDependencies": {
    "@riscovery/eslint-config": "workspace:*",
    "@riscovery/typescript-config": "workspace:*",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.8.1",
    "turbo": "^2.8.9"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/web/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "packages/**/*.{ts,tsx,js,jsx}": [
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
